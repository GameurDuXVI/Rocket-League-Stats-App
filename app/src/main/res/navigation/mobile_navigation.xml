<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="be.arnaud.rocketleaguestats.ui.global.GlobalFragment"
        android:label="@string/menu_global"
        tools:layout="@layout/fragment_global" />

    <fragment
        android:id="@+id/nav_search"
        android:name="be.arnaud.rocketleaguestats.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_nav_search_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_options"
        android:name="be.arnaud.rocketleaguestats.ui.options.OptionsFragment"
        android:label="@string/menu_options"
        tools:layout="@layout/fragment_options" >
        <action
            android:id="@+id/action_nav_search_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_individual"
        android:name="be.arnaud.rocketleaguestats.ui.individual.IndividualFragment"
        tools:layout="@layout/fragment_individual" >
        <action
            android:id="@+id/action_nav_individual_to_nav_home"
            app:destination="@id/nav_home" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="platform"
            app:argType="string"
            android:defaultValue="all" />
    </fragment>
</navigation>